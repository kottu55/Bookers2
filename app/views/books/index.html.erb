<h2>New book</h2>
<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %><br>
<%= f.submit "Create Book" %>
<% end %>



<h2>Books</h2>
<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>image</td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>