<div class="container">
<%= render 'books/error_msg', model: @book %>
<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title, :class=>"col-xs-12" %>
<p>Opinion</p>
<%= f.text_area :body, :class=>"col-xs-12", :style=>"margin-bottom: 20px" %>
<%= f.submit "Update Book",:class=>"col-xs-12 btn btn-primary" %>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
<span> | </span>
<%= link_to "Back", books_path %>
</div>

</div>