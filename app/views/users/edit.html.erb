<h1>User info</h1>
<%= form_for(@user) do |f| %>
<p>Name</p>
<%= f.text_field :name %>
<p>Image</p>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg'%>
<%= attachment_image_tag @user, :profile_image,　format: 'jpeg', size: "100x100" %>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
<p>Introduction</p>
<%= f.text_area :introduction %>
<%= f.submit "Update User"%>
<% end %>
