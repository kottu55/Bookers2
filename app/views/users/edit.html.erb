<div class="container">
	<%= render 'books/error_msg', model: @user %>
	<h1>User info</h1>
	<%= form_for(@user) do |f| %>
	<p>Name</p>
	<%= f.text_field :name %>
	<p>Image</p>
	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class:"user-edit-form" %>
	<p>Introduction</p>
	<%= f.text_area :introduction %><br>
	<%= f.submit "Update User"%>
	<% end %>
</div>
