<div class="container">

	<div class="row">
			<% if flash[:notice] %>
 			 <p><%= flash[:notice] %></p>
			<% end %>

	<%= render 'books/user_info_new_book', book: @book, user: @cuser %>

		<div  class="col-xs-9">

			<h1>My Books</h1>
			<table class="table">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td><%= link_to book.user_id, user_path(book.user_id) %></td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
